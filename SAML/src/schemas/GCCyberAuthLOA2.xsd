<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="urn:gc-ca:cyber-auth:assurance:loa2"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="urn:gc-ca:cyber-auth:assurance:loa2"
